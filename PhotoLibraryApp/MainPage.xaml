<Page
    x:Class="PhotoLibraryApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoLibraryApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        
        <Button 
                Content="Import Pictures" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Click= "Import_Photos_Button_ClickAsync"/>
        <Button 
            Content="Albums" 
            Background="White"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" Margin="173,20,0,0"  
            Click="Album_Button_Click" 
            RenderTransformOrigin="0.701,2.031" />
        
        <TextBox HorizontalAlignment="Left" Margin="91,20,0,0" Text="Collection" VerticalAlignment="Top" RenderTransformOrigin="0.573,-4.781"/>

        <Image Name="image1"  Source="{Binding Image}" HorizontalAlignment="Left" Height="234" Margin="384,416,0,0" VerticalAlignment="Top" Width="337"/>

        <!--<ListView x:Name="itemListView" ItemsSource="{x:Bind Items}"/>-->

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="textBlock" />
        </StackPanel>
    </Grid>
</Page>
